<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <Label text="Task Details" styleClass="dialog-header" />
    
    <Label text="Task Name:" />
    <TextField fx:id="taskNameField" />
    
    <Label text="Description:" />
    <TextArea fx:id="descriptionArea" prefHeight="100" />
    
    <Label text="Priority:" />
    <ComboBox fx:id="priorityComboBox" maxWidth="Infinity" />
    
    <Label text="Category:" />
    <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" />
    
    <Label text="Deadline:" />
    <DatePicker fx:id="deadlineDatePicker" maxWidth="Infinity" />
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="20" />
        </padding>
        <Button fx:id="cancelButton" text="Cancel" />
        <Button fx:id="saveButton" text="Save Task" defaultButton="true" styleClass="add-button" />
    </HBox>
</VBox>